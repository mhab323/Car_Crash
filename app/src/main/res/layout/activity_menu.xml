<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient"
        android:paddingBottom="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/menu_logo"
            android:layout_width="330dp"
            android:layout_height="334dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_game" />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/purple"
            android:hint="@string/enter_your_namehint"
            android:textColorHint="@color/purple"
            android:gravity="center"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_sensor"
            android:layout_width="280dp"
            app:icon="@drawable/console"
            app:iconGravity="textStart"
            app:iconSize="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/sensors"
            android:textColor="@color/purple"
            android:textSize="25sp"
            android:textStyle="bold"
            app:backgroundTint="@color/orange"
            app:strokeColor="@color/purple"
            app:strokeWidth="2dp" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_arrows"
            app:iconGravity="textStart"
            app:icon="@drawable/navigation_orange"
            app:iconSize="50dp"
            app:iconTint="@null"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/arrows"
            android:textColor="@color/orange"
            android:textSize="25sp"
            android:textStyle="bold"
            app:backgroundTint="@color/purple"
            app:strokeColor="@color/orange"
            app:strokeWidth="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_fast_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                app:thumbTint="@color/orange"
                app:trackTint="#559C27B0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAST"
                android:textColor="@color/orange"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fast"
                app:tint="@color/orange"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_leader"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/trophy"
            app:iconGravity="textStart"
            app:iconSize="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="@string/top_10"
            android:textColor="@color/purple"
            android:textSize="25sp"
            android:textStyle="bold"
            app:backgroundTint="@color/orange"
            app:strokeColor="@color/purple"
            app:strokeWidth="2dp" />

    </LinearLayout>
</RelativeLayout>